<% if notice %>
   <p id="notice" class='alert alert-success'><%= notice %></p> 
<% end %>


<h1 class='mb-3'>Listing Tasks</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><h5>Title</h5></th>
      <th><h5>Body</h5></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
        <tr>
          <td> <h5><%= task.title %></h5> </td>
          <td> <h5><%= task.body %></h5> </td>
          <td><%= link_to 'Show', task , class: "btn btn-outline-info" %>
          <%= link_to 'Edit', edit_task_path(task) , class: "btn btn-outline-info" %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger" %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path , class: "btn btn-outline-success" %>
